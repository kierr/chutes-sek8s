[Unit]
Description=Persist Chutes agent state on cache volume
Documentation=man:systemd.mount(5)
Requires=var-snap.mount
After=var-snap.mount
Before=k3s.service
Before=k3s-agent.service

[Mount]
What=/var/snap/chutes-agent
Where=/var/lib/chutes/agent
Type=none
Options=rbind
DirectoryMode=0755

[Install]
WantedBy=local-fs.target
