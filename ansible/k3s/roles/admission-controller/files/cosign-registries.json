{
  "registries": [
    {
      "registry": "parachutes/*",
      "require_signature": true,
      "verification_method": "key",
      "public_key": "/root/.cosign/parachutes.pub",
      "rekor_url": "https://rekor.sigstore.dev"
    },
    {
      "registry": "docker.io/*",
      "require_signature": false,
      "verification_method": "disabled"
    },
    {
      "registry": "registry.k8s.io/*",
      "require_signature": false,
      "verification_method": "disabled"
    },
    {
      "registry": "nvcr.io/*",
      "require_signature": false,
      "verification_method": "disabled"
    },
    {
      "registry": "rancher/*",
      "require_signature": false,
      "verification_method": "disabled"
    },
    {
      "registry": "bitnami/*",
      "require_signature": true,
      "verification_method": "keyless",
      "keyless_identity_regex": "^https://github.com/bitnami/.*",
      "keyless_issuer": "https://token.actions.githubusercontent.com",
      "rekor_url": "https://rekor.sigstore.dev"
    },
    {
      "registry": "gcr.io/distroless/*",
      "require_signature": true,
      "verification_method": "keyless",
      "keyless_identity_regex": "^https://github.com/GoogleContainerTools/distroless/.*",
      "keyless_issuer": "https://token.actions.githubusercontent.com"
    },
    {
      "registry": "*",
      "require_signature": true,
      "verification_method": "key",
      "public_key": "/root/.cosign/cosign.pub",
      "rekor_url": "https://rekor.sigstore.dev"
    }
  ]
}