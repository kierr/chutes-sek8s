# Attestation Configuration
endpoint: {{ attestation_endpoint }}
token: {{ attestation_token | default('') }}
interval: {{ attestation_interval | default(300) }}

# Module security specific settings
module_checks:
  enforce_signatures: {{ enable_module_signing | default(true) }}
  check_tainted: true
  critical_modules:
    - overlay
    - br_netfilter
    - nf_conntrack
    - iptable_nat
    - iptable_filter

# Reporting thresholds
thresholds:
  max_unsigned_modules: 0
  max_taint_level: 0
  required_apparmor_profiles: 1